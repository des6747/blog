<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>
  
  <p>
    <strong>Date:</strong>
    <%= post.date %>
  </p>
  
  <p>
    <strong>Subtitle:</strong>
    <%= post.subtitle %>
  </p>

  <p>
    <strong>Image url:</strong>
    <%= post.image_url %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= post.description %>
  </p>

</div>
